{
  "version": 2,
  "buildCommand": "prisma generate && npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/Server.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/Server.js" },
    { "source": "/(.*)", "destination": "/dist/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
