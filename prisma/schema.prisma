generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Session Details
model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime
}

model User {
  id                Int      @id @default(autoincrement())
  name              String
  email             String   @unique
  password          String
  role              String
  phone             String?
  address           String?
  status            String   @default("active")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  assignedTasks Task[] @relation("AssignedTasks")
  createdTasks  Task[] @relation("CreatedTasks")

  ownerProfile            Owner?
  driverProfile           Driver?
  managerProfile          Manager?
  salesmanProfile         Salesman?
  stockKeeperProfile      StockKeeper?
  cashierProfile          Cashier?
  supplierProfile         Supplier?
  distributorProfile      Distributor?
  assistantManagerProfile AssistantManager?
}

model Owner {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Driver {
  id              Int      @id @default(autoincrement())
  userId          Int      @unique
  vehicleId       String?
  vehicleType     String?
  licenseNumber   String?  @unique
  currentLocation String?
  salary          Float?
  bonus           Float?
  attendance      String?
  performanceRating Int?

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  deliveries  Delivery[]
  salesOrders SalesOrder[]
}

model Manager {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Salesman {
  id          Int      @id @default(autoincrement())
  userId      Int      @unique
  salesTarget Float?
  totalSales  Float    @default(0)
  commission  Float    @default(0)
  salary      Float?
  bonus       Float?
  attendance  String?
  performanceRating Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model StockKeeper {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  salary    Float?
  bonus     Float?
  attendance String?
  performanceRating Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Cashier {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
    salary            Float?
  bonus             Float?
  attendance        String?
  performanceRating Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Supplier {
  id           Int      @id @default(autoincrement())
  userId       Int      @unique
  companyName  String?
  supplierType String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  orders Order[]

  invoices Invoice[]

  products Product[]

  supplies Supply[]
}

model Distributor {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  salary    Float?
  bonus     Float?
  attendance String?
  performanceRating Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AssistantManager {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  salary    Float?
  bonus     Float?
  attendance String?
  performanceRating Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  sku         String    @unique
  description String?
  category    String?
  price       Float
  quantity    Int
  minStock    Int?
  maxStock    Int?
  location    String?
  supplierId  Int?
  batchNumber String?
  expiryDate  DateTime?
  status      String    @default("active")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  supplier Supplier? @relation(fields: [supplierId], references: [id])
}

model Task {
  id            Int       @id @default(autoincrement())
  title         String
  description   String?
  assigneeId    Int
  assignerId    Int
  dueDate       DateTime?
  priority      String?
  status        String    @default("pending")
  completedDate DateTime?
  notes         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  assignee User @relation("AssignedTasks", fields: [assigneeId], references: [id])
  assigner User @relation("CreatedTasks", fields: [assignerId], references: [id])
}

model CustomerFeedback {
  id          Int       @id @default(autoincrement())
  customerId  Int
  orderId     Int
  comment     String?
  status      String    @default("new")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  customer Customer @relation(fields: [customerId], references: [id])

  salesOrder SalesOrder @relation(fields: [orderId], references: [id])
}

model Delivery {
  id              Int       @id @default(autoincrement())
  deliveryNumber  String
  driverId        Int
  vehicleId       Int
  deliveryAddress String
  scheduledDate   DateTime
  deliveredDate   DateTime?
  estimatedTime   Int
  status          String
  notes           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  driver Driver @relation(fields: [driverId], references: [id])

  salesOrders SalesOrder[]

  invoices SalesInvoice[]
}

model SalesOrder {
  id             Int      @id @default(autoincrement())
  orderNumber    String   @unique
  customerId     Int
  customerName   String
  orderDate      DateTime
  subtotal       Float
  status         String   @default("pending")
  paymentStatus  String   @default("unpaid")
  items          Json
  notes          String?
  driverId       Int?
  deliveryId     Int?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  delivery   Delivery? @relation(fields: [deliveryId], references: [id])

  driver     Driver?   @relation(fields: [driverId], references: [id])

  customer   Customer  @relation(fields: [customerId], references: [id])

  invoices SalesInvoice[]

  payments Payment[]

  customerFeedbacks CustomerFeedback[]
}

model Order {
  id          Int      @id @default(autoincrement())
  orderDate   DateTime
  status      String   @default("pending")
  totalAmount Float
  supplierId  Int
  dueDate     DateTime
  items       Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  supplier Supplier @relation(fields: [supplierId], references: [id])

  shipments Shipment[]
  invoices  Invoice[]
}

model Supply {
  id        Int      @id @default(autoincrement())
  name      String
  sku       String   @unique
  category  String?
  supplierId Int
  stock     Int
  price     Float
  status    String   @default("available")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  supplier Supplier @relation(fields: [supplierId], references: [id])
}

model Invoice {
  id              Int       @id @default(autoincrement())
  invoiceNumber   String    @unique
  purchaseOrderId Int
  supplierId      Int
  invoiceDate     DateTime
  dueDate         DateTime
  paidDate        DateTime?
  totalAmount     Float
  paidAmount      Float?
  balance         Float?
  status          String    @default("pending")
  notes           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  supplier Supplier @relation(fields: [supplierId], references: [id])

  order Order @relation(fields: [purchaseOrderId], references: [id])
}

model Shipment {
  id                   Int       @id @default(autoincrement())
  shipmentNumber       String
  purchaseOrderId      Int
  supplierId           Int
  shipmentDate         DateTime
  expectedDeliveryDate DateTime
  actualDeliveryDate   DateTime?
  carrier              String
  status               String    @default("pending")
  notes                String?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  order Order @relation(fields: [purchaseOrderId], references: [id])
}

model Customer {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  phone          String?
  address        String?
  businessName   String?
  customerType   String?
  totalPurchases Int      @default(0)
  totalSpent     Float    @default(0.0)
  loyaltyPoints  Int      @default(0)
  status         String   @default("active")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  salesOrders SalesOrder[]

  customerFeedbacks CustomerFeedback[]
}

model SalesInvoice {
  id              Int       @id @default(autoincrement())
  invoiceNumber   String    @unique
  customerId      Int
  salesOrderId    Int?
  deliveryId      Int?
  date            DateTime
  paymentMethod   String
  items           Json
  subtotal        Float
  collectedAmount Float
  collectedAt     DateTime?
  status          String    @default("pending")
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  salesOrder SalesOrder? @relation(fields: [salesOrderId], references: [id])

  delivery Delivery? @relation(fields: [deliveryId], references: [id])

}

model Cart {
  id          Int      @id @default(autoincrement())
  items       Json
  totalAmount Float
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  smallOrder SmallOrder?
}

model SmallOrder {
  id            Int      @id @default(autoincrement())
  orderNumber   String   @unique
  cartId        Int      @unique
  status        String   @default("pending")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  cart Cart @relation(fields: [cartId], references: [id])
}

model Payment {
  id            Int       @id @default(autoincrement())
  salesOrderId     Int
  amount        Float
  paymentDate   DateTime
  paymentMethod String
  status        String    @default("completed")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  salesOrder SalesOrder? @relation(fields: [salesOrderId], references: [id])
}
