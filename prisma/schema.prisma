generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int      @id @default(autoincrement())
  name              String
  email             String   @unique
  password          String
  role              String
  phone             String?
  address           String?
  salary            Float?
  bonus             Float?
  attendance        Int?
  performanceRating Int?
  status            String   @default("active")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  sku         String    @unique
  description String?
  category    String?
  price       Float
  quantity    Int
  minStock    Int?
  maxStock    Int?
  location    String?
  supplierId  Int?
  batchNumber String?
  expiryDate  DateTime?
  status      String    @default("active")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
