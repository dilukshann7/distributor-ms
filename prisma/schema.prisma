generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime
}

model User {
  id                Int      @id @default(autoincrement())
  name              String
  email             String   @unique
  password          String
  role              String
  phone             String?
  address           String?
  status            String   @default("active")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  assignedTasks Task[] @relation("AssignedTasks")
  createdTasks  Task[] @relation("CreatedTasks")

  ownerProfile            Owner?
  driverProfile           Driver?
  managerProfile          Manager?
  salesmanProfile         Salesman?
  stockKeeperProfile      StockKeeper?
  cashierProfile          Cashier?
  supplierProfile         Supplier?
  distributorProfile      Distributor?
  assistantManagerProfile AssistantManager?
}

model Owner {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Driver {
  id              Int      @id @default(autoincrement())
  userId          Int      @unique
  vehicleId       String?
  vehicleType     String?
  licenseNumber   String?  @unique
  currentLocation String?
  salary          Float?
  bonus           Float?
  attendance      String?
  performanceRating Int?

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  deliveries  Delivery[]
  salesOrders SalesOrder[] 
}

model Manager {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Salesman {
  id          Int      @id @default(autoincrement())
  userId      Int      @unique
  salesTarget Float?
  totalSales  Float    @default(0)
  commission  Float    @default(0)
  salary      Float?
  bonus       Float?
  attendance  String?
  performanceRating Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model StockKeeper {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  salary    Float?
  bonus     Float?
  attendance String?
  performanceRating Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Cashier {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
    salary            Float?
  bonus             Float?
  attendance        String?
  performanceRating Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Supplier {
  id           Int      @id @default(autoincrement())
  userId       Int      @unique
  companyName  String?
  supplierType String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  purchaseOrders PurchaseOrder[]

  purchaseInvoices PurchaseInvoice[]

  products Product[]

  supplies Supply[]
}

model Distributor {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  salary    Float?
  bonus     Float?
  attendance String?
  performanceRating Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AssistantManager {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  salary    Float?
  bonus     Float?
  attendance String?
  performanceRating Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  sku         String    @unique
  description String?
  category    String?
  price       Float
  quantity    Int
  minStock    Int?
  maxStock    Int?
  location    String?
  supplierId  Int?
  batchNumber String?
  expiryDate  DateTime?
  status      String    @default("active")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  supplier Supplier? @relation(fields: [supplierId], references: [id])
}

model Task {
  id            Int       @id @default(autoincrement())
  title         String
  description   String?
  assigneeId    Int
  assignerId    Int
  dueDate       DateTime?
  priority      String?
  status        String    @default("pending")
  completedDate DateTime?
  notes         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  assignee User @relation("AssignedTasks", fields: [assigneeId], references: [id])
  assigner User @relation("CreatedTasks", fields: [assignerId], references: [id])
}

model CustomerFeedback {
  id           Int       @id @default(autoincrement())
  customerId   Int
  salesOrderId Int
  comment      String?
  status       String    @default("new")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  customer   Customer   @relation(fields: [customerId], references: [id])
  salesOrder SalesOrder @relation(fields: [salesOrderId], references: [id])
}

model Delivery {
  id              Int       @id @default(autoincrement())
  deliveryNumber  String
  driverId        Int
  vehicleId       Int
  deliveryAddress String
  scheduledDate   DateTime
  deliveredDate   DateTime?
  estimatedTime   Int
  status          String
  notes           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  driver Driver @relation(fields: [driverId], references: [id])

  salesOrders   SalesOrder[]    // Child of Order
  salesInvoices SalesInvoice[]  // Child of Invoice
}

model Order {
  id          Int       @id @default(autoincrement())
  orderNumber String    @unique
  orderType   String    // "purchase" | "sales" | "retail"
  orderDate   DateTime
  status      String    @default("pending")
  totalAmount Float
  items       Json
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  purchaseOrder PurchaseOrder?
  salesOrder    SalesOrder?
  retailOrder   RetailOrder?

  invoices Invoice[]
}

model PurchaseOrder {
  id         Int      @id @default(autoincrement())
  orderId    Int      @unique
  supplierId Int
  dueDate    DateTime

  order    Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  supplier Supplier @relation(fields: [supplierId], references: [id])

  shipments        Shipment[]
  purchaseInvoices PurchaseInvoice[]
}

model SalesOrder {
  id            Int      @id @default(autoincrement())
  orderId       Int      @unique
  customerId    Int
  customerName  String
  paymentStatus String   @default("unpaid")
  driverId      Int?
  deliveryId    Int?

  order    Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  customer Customer  @relation(fields: [customerId], references: [id])
  driver   Driver?   @relation(fields: [driverId], references: [id])
  delivery Delivery? @relation(fields: [deliveryId], references: [id])

  salesInvoices     SalesInvoice[]
  payments          Payment[]
  customerFeedbacks CustomerFeedback[]
}

model RetailOrder {
  id      Int @id @default(autoincrement())
  orderId Int @unique
  cartId  Int @unique

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  cart  Cart  @relation(fields: [cartId], references: [id])
}

model Supply {
  id        Int      @id @default(autoincrement())
  name      String
  sku       String   @unique
  category  String?
  supplierId Int
  stock     Int
  price     Float
  status    String   @default("available")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  supplier Supplier @relation(fields: [supplierId], references: [id])
}

model Invoice {
  id            Int       @id @default(autoincrement())
  invoiceNumber String    @unique
  invoiceType   String    // "purchase" | "sales"
  orderId       Int
  invoiceDate   DateTime
  dueDate       DateTime?
  totalAmount   Float
  status        String    @default("pending")
  notes         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  order Order @relation(fields: [orderId], references: [id])

  purchaseInvoice PurchaseInvoice?
  salesInvoice    SalesInvoice?
}

model PurchaseInvoice {
  id              Int       @id @default(autoincrement())
  invoiceId       Int       @unique
  purchaseOrderId Int
  supplierId      Int
  paidDate        DateTime?
  paidAmount      Float?
  balance         Float?

  invoice       Invoice       @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  purchaseOrder PurchaseOrder @relation(fields: [purchaseOrderId], references: [id])
  supplier      Supplier      @relation(fields: [supplierId], references: [id])
}

model SalesInvoice {
  id              Int       @id @default(autoincrement())
  invoiceId       Int       @unique
  salesOrderId    Int?
  customerId      Int
  deliveryId      Int?
  paymentMethod   String?
  items           Json?
  subtotal        Float?
  collectedAmount Float?
  collectedAt     DateTime?

  invoice    Invoice    @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  salesOrder SalesOrder? @relation(fields: [salesOrderId], references: [id])
  delivery   Delivery?  @relation(fields: [deliveryId], references: [id])
}

model Shipment {
  id                   Int       @id @default(autoincrement())
  shipmentNumber       String
  purchaseOrderId      Int
  supplierId           Int
  shipmentDate         DateTime
  expectedDeliveryDate DateTime
  actualDeliveryDate   DateTime?
  carrier              String
  status               String    @default("pending")
  notes                String?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  purchaseOrder PurchaseOrder @relation(fields: [purchaseOrderId], references: [id])
}

model Customer {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  phone          String?
  address        String?
  businessName   String?
  customerType   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  salesOrders SalesOrder[]

  customerFeedbacks CustomerFeedback[]
}

model Cart {
  id          Int      @id @default(autoincrement())
  items       Json
  totalAmount Float
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  retailOrder RetailOrder?
}

model Payment {
  id            Int       @id @default(autoincrement())
  salesOrderId  Int
  amount        Float
  paymentDate   DateTime
  paymentMethod String
  status        String    @default("completed")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  salesOrder SalesOrder @relation(fields: [salesOrderId], references: [id])
}
